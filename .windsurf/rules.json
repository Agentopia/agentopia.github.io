{
  "version": 1,
  "rules": {
    "local_development": {
      "server": {
        "type": "python",
        "command": "python -m http.server 8080",
        "port": 8080,
        "kill_command": "taskkill /F /IM python.exe",
        "restart_steps": [
          "1. Kill existing Python server: taskkill /F /IM python.exe",
          "2. Start new server: python -m http.server 8080"
        ]
      }
    },
    "file_organization": {
      "allowed_extensions": [".html", ".css", ".js", ".md", ".json", ".png", ".jpg", ".jpeg", ".gif", ".svg"],
      "structure": {
        "css": "*.css",
        "js": "*.js",
        "images": ["*.png", "*.jpg", "*.jpeg", "*.gif", "*.svg"],
        "docs": "*.md"
      }
    },
    "code_style": {
      "html": {
        "indent_size": 2,
        "max_line_length": 120,
        "require_closing_tags": true
      },
      "css": {
        "indent_size": 2,
        "max_line_length": 80,
        "property_order": "alphabetical"
      },
      "javascript": {
        "indent_size": 2,
        "max_line_length": 80,
        "quotes": "single",
        "semicolons": true
      }
    },
    "naming_conventions": {
      "files": "kebab-case",
      "css_classes": "kebab-case",
      "js_variables": "camelCase",
      "js_functions": "camelCase"
    },
    "security": {
      "required_headers": {
        "Content-Security-Policy": true,
        "X-Frame-Options": true,
        "X-Content-Type-Options": true
      }
    },
    "design_technical_specs": {
      "accessibility": {
        "wcag_level": "AA",
        "required_attributes": {
          "images": ["alt"],
          "inputs": ["aria-label", "role"],
          "buttons": ["aria-label"]
        },
        "color_contrast_ratio": "4.5:1"
      },
      "responsive_design": {
        "breakpoints": {
          "mobile": "320px",
          "tablet": "768px",
          "desktop": "1024px"
        },
        "required_viewport_meta": true,
        "mobile_first": true
      },
      "user_experience": {
        "max_load_time": "3s",
        "interactive_feedback": {
          "hover_states": true,
          "loading_states": true,
          "error_states": true
        },
        "animation_duration": {
          "min": "150ms",
          "max": "500ms"
        }
      },
      "modern_design": {
        "spacing_system": {
          "base_unit": "4px",
          "scale": [0, 4, 8, 16, 24, 32, 48, 64]
        },
        "typography": {
          "scale_ratio": 1.25,
          "min_font_size": "16px",
          "line_height": 1.5
        }
      }
    }
  }
}
